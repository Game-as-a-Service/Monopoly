@page "/"
@inject ILocalStorageService _localStorageService
@inject NavigationManager _navigationManager
<MudTextField Variant="Variant.Outlined" Label="遊戲Id" @bind-Value="GameId" />
<MudTextField Variant="Variant.Outlined" Label="JWT" @bind-Value="JWT" Lines="5" />
<MudButton Color="Color.Primary" OnClick="SetIdAndRedirection">加入遊戲</MudButton>

@code {
    string GameId { get; set; } = "";
    string JWT { get; set; } = "";
    public void SetIdAndRedirection()
    {
        _localStorageService.SetItemAsync("JWT", JWT);
        _navigationManager.NavigateTo($"/{GameId}");
    }
}